doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 Noom
        main 
            div#welcome
                form
                    input(placeholder="room name", required, type="text") 
                    button Enter Room
                h4 Open Rooms:
                ul 
            div#room
                h3
                ul
                form#name
                    input(placeholder="nickname", required, type="text") 
                    button Save
                form#msg
                    input(placeholder="message", required, type="text") 
                    button Send


        script(src="/socket.io/socket.io.js") //브라우저에 socketIO설치. io서버 만들면 제공해줌
        script(src="/public/js/app.js") //server.js에 static을 작성해줘야 작동

        
